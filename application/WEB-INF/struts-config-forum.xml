<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "struts-config_1_2.dtd">

<struts-config>

  <form-beans>
    <form-bean name="forumForm" type="com.jdon.jivejdon.presentation.form.ForumForm"/>
    <form-bean name="feedForm" type="com.jdon.jivejdon.presentation.form.feed.FeedForm"/>
    <form-bean name="forumListForm" type="com.jdon.strutsutil.ModelListForm"/>	  
    <form-bean name="imageInfoForm" type="com.jdon.jivejdon.presentation.form.ImageInfoForm"/>
    <form-bean name="imageListForm" type="com.jdon.strutsutil.ModelListForm"/>     
  </form-beans>

  <action-mappings>
     <!--  index.jsp   -->
    <action path="/forum/forumList" type="com.jdon.jivejdon.presentation.action.ForumListAction"
      name="forumListForm" scope="request" 
      validate="false">
      <forward name="success" path="/forum/forumList.jsp"/>
    </action>
    
    <!-- 301重定向处理器：将旧格式URL重定向到新格式URL -->
    <action path="/redirect" type="com.jdon.jivejdon.presentation.action.ThreadRedirectAction"
      scope="request" validate="false">
    </action>
    

  <action path="/admin/forumList" type="com.jdon.jivejdon.presentation.action.ForumListAction"
      name="forumListForm" scope="request" 
      validate="false">
      <forward name="success" path="/admin/forum/forumList.jsp"/>
    </action>
	  	  	  
   <action name="forumForm" path="/admin/forumAction" type="com.jdon.strutsutil.ModelViewAction" scope="request"
		validate="false">
      <forward name="create" path="/admin/forum/forum.jsp" />
      <forward name="edit" path="/admin/forum/forum.jsp" />
    </action>
	  
    <action name="forumForm" path="/admin/forumSaveAction" type="com.jdon.strutsutil.ModelSaveAction" scope="request"
    	validate="true" input="/admin/forumAction.shtml">
      <forward name="success" path="/admin/forumList.shtml" />
      <forward name="failure" path="/admin/forumAction.shtml" />
    </action>
    
	<action name="imageListForm" path="/admin/imageAction" type="com.jdon.jivejdon.presentation.action.admin.ImageListAction" 
		scope="request"
		validate="false">
      <forward name="success" path="/admin/forum/imageList.jsp" />
    </action>
    
   <action name="imageListForm" path="/forum/imagesSlide" type="com.jdon.jivejdon.presentation.action.ImageSlideAction" 
		scope="request"
		validate="false">
      <forward name="success" path="/imagesSlide.jsp" />
    </action>
    
    <action name="imageInfoForm" path="/admin/imageSaveAction" type="com.jdon.strutsutil.ModelSaveAction" scope="request"
    	validate="true" input="/admin/imageAction.shtml">
      <forward name="success" path="/admin/imageAction.shtml" />
      <forward name="failure" path="/admin/imageAction.shtml" />
    </action>
    
   
    <action path="/message/forumListJSON" type="com.jdon.jivejdon.presentation.action.ForumListAction"
      name="forumListForm" scope="request" 
      validate="false">
      <forward name="success" path="/message/forumListJSON.jsp"/>
    </action>	
    
    
    
   
    
  </action-mappings>
</struts-config>
